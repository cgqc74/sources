# Requiere privilegios de administrador
$targetVersion = "5.0.416"

# Buscar en el registro las versiones instaladas del SDK y runtime
$uninstallKeys = @(
    "HKLM:\SOFTWARE\Microsoft\Windows\CurrentVersion\Uninstall\*",
    "HKLM:\SOFTWARE\WOW6432Node\Microsoft\Windows\CurrentVersion\Uninstall\*"
)

Write-Host "üîç Buscando .NET SDK/Runtime versi√≥n $targetVersion..."

$found = $false
foreach ($key in $uninstallKeys) {
    Get-ItemProperty -Path $key -ErrorAction SilentlyContinue |
    Where-Object { ($_.DisplayName -like "*5.0.416*") -and $_.UninstallString } |
    ForEach-Object {
        $found = $true
        Write-Host "üßπ Desinstalando: $($_.DisplayName)"
        $uninstallCmd = $_.UninstallString

        # Si es MSIEXEC
        if ($uninstallCmd -like "msiexec*") {
            Start-Process "msiexec.exe" -ArgumentList "/x", "$($_.PSChildName)", "/quiet", "/norestart" -Wait
        }
        # Si es un EXE directo
        else {
            Start-Process -FilePath $uninstallCmd -ArgumentList "/quiet", "/norestart" -Wait
        }

        Write-Host "‚úÖ Desinstalaci√≥n finalizada para $($_.DisplayName)"
    }
}

if (-not $found) {
    Write-Warning "‚ö†Ô∏è No se encontr√≥ la versi√≥n 5.0.416 de .NET instalada en el sistema."
}

