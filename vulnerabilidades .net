        }
    } catch {
        Write-Log "No se pudo descargar .NET 9: $($_.Exception.Message)" "ERROR"
        Write-Host "üí° Visita: https://dotnet.microsoft.com/en-us/download/dotnet/9.0 para descargar manualmente."
    }
}

